<?xml version="1.0" encoding="UTF-8"?>
<project name="project" default="default">

	<target name="default" depends="download-antlr">
		<java classname="org.antlr.v4.Tool" fork="true" failonerror="true" maxmemory="500m">
			<arg value="-o" />
			<arg value="gen/org/sourcepit/antlr4/eclipse/lang/tests/littlej" />
			<arg value="-listener" />
			<arg value="-visitor" />
			<arg value="-Werror" />
			<arg value="LittleJ.g4" />
			<classpath>
				<pathelement location=".antlr/antlr-4.5-complete.jar" />
			</classpath>
		</java>

		<java classname="org.antlr.v4.Tool" fork="true" failonerror="true" maxmemory="500m">
			<arg value="-o" />
			<arg value="gen/org/sourcepit/antlr4/eclipse/lang/tests/littlej/query" />
			<arg value="-listener" />
			<arg value="-visitor" />
			<arg value="-Werror" />
			<arg value="LittleJQ.g4" />
			<classpath>
				<pathelement location=".antlr/antlr-4.5-complete.jar" />
			</classpath>
		</java>
		
		<java classname="org.antlr.v4.Tool" fork="true" failonerror="true" maxmemory="500m">
			<arg value="-o" />
			<arg value="gen/org/sourcepit/antlr4/eclipse/lang/tests/line" />
			<arg value="-listener" />
			<arg value="-visitor" />
			<arg value="-Werror" />
			<arg value="Line.g4" />
			<classpath>
				<pathelement location=".antlr/antlr-4.5-complete.jar" />
			</classpath>
		</java>
		
		<java classname="org.antlr.v4.Tool" fork="true" failonerror="true" maxmemory="500m">
					<arg value="-o" />
					<arg value="gen/org/sourcepit/antlr4/eclipse/lang/tests/pred" />
					<arg value="-listener" />
					<arg value="-visitor" />
					<arg value="-Werror" />
					<arg value="Pred.g4" />
					<classpath>
						<pathelement location=".antlr/antlr-4.5-complete.jar" />
					</classpath>
				</java>

		<java classname="org.antlr.v4.Tool" fork="true" failonerror="true" maxmemory="500m">
			<arg value="-o" />
			<arg value="gen/org/sourcepit/antlr4/eclipse/lang/tests/javadoc" />
			<arg value="-listener" />
			<arg value="-visitor" />
			<arg value="-Werror" />
			<arg value="Javadoc.g4" />
			<classpath>
				<pathelement location=".antlr/antlr-4.5-complete.jar" />
			</classpath>
		</java>

		<java classname="org.antlr.v4.Tool" fork="true" failonerror="true" maxmemory="500m">
			<arg value="-o" />
			<arg value="gen/org/sourcepit/antlr4/astpath" />
			<arg value="-listener" />
			<arg value="-visitor" />
			<arg value="-Werror" />
			<arg value="AstPath.g4" />
			<classpath>
				<pathelement location=".antlr/antlr-4.5-complete.jar" />
			</classpath>
		</java>
	</target>

	<target name="download-antlr">
		<mkdir dir=".antlr" />
		<get src="http://www.antlr.org/download/antlr-4.5-complete.jar" dest=".antlr/antlr-4.5-complete.jar" skipexisting="true" />
	</target>

</project>
